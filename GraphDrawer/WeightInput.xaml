<Window x:Class="GraphDrawer.WeightInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input Weight" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Please enter the weight:" Grid.Row="0" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" Margin="10">
            <Button Content="OK" Width="75" Click="OkButton_Click" Margin="5"/>
            <Button Content="Cancel" Width="75" Click="CancelButton_Click" Margin="5"/>
        </StackPanel>
        <TextBox Name="TextBox" TextWrapping="Wrap" Text="" Margin="10,41,10,45" Grid.RowSpan="3"/>
    </Grid>
</Window>
